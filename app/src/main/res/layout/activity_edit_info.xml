<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditInfoActivity">


        <EditText
            android:id="@+id/edit_address"
            android:layout_width="168dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/edit_email"
            app:layout_constraintStart_toStartOf="@+id/edit_email"
            app:layout_constraintTop_toBottomOf="@+id/edit_email" />

        <TextView
            android:id="@+id/gender4"
            android:layout_width="107dp"
            android:layout_height="34dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Address"
            app:layout_constraintEnd_toEndOf="@+id/gender3"
            app:layout_constraintStart_toStartOf="@+id/gender3"
            app:layout_constraintTop_toBottomOf="@+id/gender3" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="168dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/edit_pob"
            app:layout_constraintStart_toStartOf="@+id/edit_pob"
            app:layout_constraintTop_toBottomOf="@+id/edit_pob" />

        <TextView
            android:id="@+id/gender3"
            android:layout_width="107dp"
            android:layout_height="34dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Email"
            app:layout_constraintEnd_toEndOf="@+id/gender"
            app:layout_constraintStart_toStartOf="@+id/gender"
            app:layout_constraintTop_toBottomOf="@+id/gender" />

        <ImageView
            android:id="@+id/info_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.057"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_change_picture_button"
            app:srcCompat="@drawable/ic_person" />

        <TextView
            android:id="@+id/info_fullname"
            android:layout_width="86dp"
            android:layout_height="34dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="First Name"
            app:layout_constraintStart_toStartOf="@+id/info_image"
            app:layout_constraintTop_toBottomOf="@+id/info_image" />

        <TextView
            android:id="@+id/lastName"
            android:layout_width="90dp"
            android:layout_height="34dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Last Name"
            app:layout_constraintEnd_toEndOf="@+id/info_fullname"
            app:layout_constraintStart_toStartOf="@+id/info_fullname"
            app:layout_constraintTop_toBottomOf="@+id/info_fullname" />

        <TextView
            android:id="@+id/birthDate"
            android:layout_width="102dp"
            android:layout_height="35dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Date of Birth"
            app:layout_constraintEnd_toEndOf="@+id/lastName"
            app:layout_constraintStart_toStartOf="@+id/lastName"
            app:layout_constraintTop_toBottomOf="@+id/lastName" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="107dp"
            android:layout_height="35dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Place of Birth"
            app:layout_constraintEnd_toEndOf="@+id/birthDate"
            app:layout_constraintStart_toStartOf="@+id/birthDate"
            app:layout_constraintTop_toBottomOf="@+id/birthDate" />

        <Button
            android:id="@+id/edit_change_picture_button"
            android:layout_width="182dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:background="#00000000"
            android:text="Change Profile Picture"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/edit_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:text="Save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gender4" />

        <EditText
            android:id="@+id/edit_first_name"
            android:layout_width="168dp"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_image" />

        <EditText
            android:id="@+id/edit_last_name"
            android:layout_width="168dp"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/edit_first_name"
            app:layout_constraintStart_toStartOf="@+id/edit_first_name"
            app:layout_constraintTop_toBottomOf="@+id/edit_first_name" />

        <EditText
            android:id="@+id/edit_pob"
            android:layout_width="168dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/edit_dob"
            app:layout_constraintStart_toStartOf="@+id/edit_dob"
            app:layout_constraintTop_toBottomOf="@+id/edit_dob" />

        <EditText
            android:id="@+id/edit_dob"
            android:layout_width="168dp"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/edit_last_name"
            app:layout_constraintStart_toStartOf="@+id/edit_last_name"
            app:layout_constraintTop_toBottomOf="@+id/edit_last_name" />

        <ProgressBar
            android:id="@+id/edit_loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:indeterminate="true"
            android:minWidth="200dp"
            android:minHeight="50dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.44" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>



